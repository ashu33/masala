#include<iostream.h>
#include<conio.h>

void main()
    {
        int i,loc,a[20],n,top=-1,lower[20],upper[20],beg,end;
            cout<<"ENTER THE SIZE OF THE ARRAY";
            cin>>n;
            for(i=0;i<n;i++)
        {
            cin>>a[i];
        }
            if(n>1)
        {
            top=top+1;
            lower[top]=0;
            upper[top]=n-1;
        }

            while(top!=-1)
     {
            beg=lower[top];
            end=upper[top];
            top=top-1;
            quick(a,n,beg,end,loc);
            if(beg<loc-1)
        {
            top=top+1;
            lower[top]=beg;
            upper[top]=loc-1;
        }
            if(loc+1<end)
        {
            top=top+1;
            lower[top]=loc+1;
            upper[top]=end;
        }
     }
     for(i=0;i<n;i++)
     {
        cout<<"THE SORTED ELEMETNS ARE"<<a[i];
     }


getch():
}
