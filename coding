#include<iostream.h>
#include<conio.h>
void quick(int a[],int n,int beg,int &loc);
    {
        int left,right,temp;
        left=loc=beg;
        right=end;
        label:while(a[loc]<=a[right] && loc!=right)
        {
            right=right-1;
        }

            if(loc==right)
            return;

            if(a[loc]>a[right])
        {
            temp=a[loc];
            a[loc]=a[right];
            a[right]=temp;
            loc=right;
        }

            while(a[left]<a[loc] && left!=loc)
        {
            left=left+1;
        }
            if(loc==left)
            return;

            if(a[left]>a[loc])
        {
            temp=a[left]
            a[left]=a[loc];
            a[loc]=temp;
            loc=left;
            goto label;

        }
    }

void main()
    {
        int i,loc,a[20],n,top=-1,lower[20],upper[20],beg,end;
            cout<<"ENTER THE SIZE OF THE ARRAY";
            cin>>n;
            for(i=0;i<n;i++)
        {
            cin>>a[i];
        }
            if(n>1)
        {
            top=top+1;
            lower[top]=0;
            upper[top]=n-1;
        }

            while(top!=-1)
     {
            beg=lower[top];
            end=upper[top];
            top=top-1;
            quick(a,n,beg,end,loc);
            if(beg<loc-1)
        {
            top=top+1;
            lower[top]=beg;
            upper[top]=loc-1;
        }
            if(loc+1<end)
        {
            top=top+1;
            lower[top]=loc+1;
            upper[top]=end;
        }
     }
     for(i=0;i<n;i++)
     {
        cout<<"THE SORTED ELEMETNS ARE"<<a[i];
     }


getch():
}
